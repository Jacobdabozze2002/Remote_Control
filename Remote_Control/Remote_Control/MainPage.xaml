<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Remote_Control.MainPage"
             BackgroundColor="black">

    
    <StackLayout VerticalOptions="Center">
        <Label  x:Name="lbConnect"
                Text="Not Connected"
                HorizontalOptions="Center"
                FontSize="Title"
                TextColor="White"
                Margin="10"/>
        <Button x:Name="btn1"   
                Text="LED 1 Off"
                Clicked="request_status_change"
                FontSize="Large"
                BackgroundColor="White"
                Margin="10"/>
        <Button x:Name="btn2"   
                Text="LED 2 Off"
                Clicked="request_status_change"
                FontSize="Large"
                BackgroundColor="White"
                Margin="10"/>
        <Button x:Name="btn3"   
                Text="LED 3 Off"
                Clicked="request_status_change"
                FontSize="Large"
                BackgroundColor="White"
                Margin="10"/>
        <Button x:Name="btn4"   
                Text="LED 4 Off"
                Clicked="request_status_change"
                FontSize="Large"
                BackgroundColor="White"
                Margin="10"/>
    </StackLayout>

</ContentPage>
